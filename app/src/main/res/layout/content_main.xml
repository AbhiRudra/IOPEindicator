<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaa"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.abhishek.iope_indicator.MainActivity"
    tools:showIn="@layout/app_bar_main">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:padding="10dp"
       android:background="@drawable/optionshape"
       >
       <TextView
           android:layout_width="match_parent"
           android:layout_height="30dp" />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:padding="10dp"
           android:background="#017301">


           <TextView
               android:id="@+id/textView5"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Source:"
               android:textSize="18dp"
               android:textStyle="bold"
               android:paddingBottom="5dp"
               android:textColor="#000"/>




           <AutoCompleteTextView
               android:id="@+id/auto1"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:background="#fff"
               android:paddingBottom="5dp"
               android:hint="Enter Source Here!" />

           <TextView
               android:id="@+id/textView6"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Destination:"
               android:textSize="18dp"
               android:paddingBottom="5dp"
               android:textStyle="bold"
               android:textColor="#000" />


           <AutoCompleteTextView
               android:id="@+id/auto2"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:background="#fff"
               android:hint="Enter Destination Here!"
               android:paddingBottom="5dp"/>

           <Button
               android:id="@+id/button"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingTop="10dp"
               android:text="Search" />


       </LinearLayout>



       <ImageView
           android:id="@+id/i1"
           android:layout_width="match_parent"
           android:layout_height="400dp"
           app:srcCompat="@drawable/iopec" />




   </LinearLayout>

</ScrollView>
